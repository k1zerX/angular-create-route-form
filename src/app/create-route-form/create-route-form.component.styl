.create-route-form
  display grid
  grid-template-areas \
    "Title          Title           Title" \
    "NameLabel      NameText        NameText" \
    "AuthorLabel    AuthorText      AuthorText" \
    "PerformerLabel  PerformerSelect  PerformerSelect" \
    "DaysLabel      DaysList        LongRound" \
    ".              .               SaveButton"
  grid-template-columns 1fr 2fr auto
  align-items center
  justify-items start
  row-gap 20px
  padding 10px

  &__title
    grid-area Title
    font-size 18px
    font-weight bold

  &__name-label
    grid-area NameLabel

  &__name-text
    grid-area NameText
    justify-self stretch

  &__author-label
    grid-area AuthorLabel

  &__author-text
    grid-area AuthorText
    justify-self stretch

  &__performer-label
    grid-area PerformerLabel

  &__performer-select
    grid-area PerformerSelect
    justify-self stretch

  &__days-label
    grid-area DaysLabel

  &__days-list
    grid-area DaysList
    display inline-flex

  &__day
    margin-left 10px
    &:first-child
      margin-left 0

    &-radio:checked + &-label
      text-decoration underline
      font-weight bold

    &-radio
      display none

  &__long-round
    grid-area LongRound
    cursor pointer
    display inline-flex
    align-items center

  color(val)
    color val
    -webkit-text-fill-color val

  &__save-button
    all unset
    grid-area SaveButton
    justify-self center
    padding 10px 30px
    background linear-gradient(#3e4fef, #6960e6)
    color(#cadaff)
    border-radius 5px
    user-select(none)
    display inline-flex
    justify-content center
    align-items center

    &[disabled]
      background grey
      color(white)

    &:hover:not([disabled])
      cursor pointer
      color(white)
      box-shadow 0px 2px 7px -4px black
