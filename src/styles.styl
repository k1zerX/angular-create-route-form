user-select(val)
  -webkit-user-select val
  -khtml-user-select val
  -moz-user-select val
  -ms-user-select val
  user-select val

.required::after
  color red
  content "*"

label
  cursor pointer

input
  cursor unset

.ripple-target
  position relative
  overflow hidden

span.ripple
  position absolute
  border-radius 50%
  transform scale(0)
  animation ripple 600ms linear
  background rgba(255, 255, 255, 0.7)

@keyframes ripple
  to
    transform scale(4)
    opacity 0

h-font
  font-style normal
  line-height 150%

html *
  font-size 14px
  font-weight normal
  font-family Arial

body
  background #f8f9fd

input[type=text], select
  all unset
  background white
  color #686868
  border-radius 5px
  padding 10px
  border 1px solid
  border-color @background
  box-shadow 0px 3px 10px -5px rgba(0, 0, 0, 0.3)

  &:focus
    border-color blue

  &.ng-valid.ng-touched:not(:focus)
    border-color green

  &.ng-invalid.ng-touched:not(:focus)
    border-color red
